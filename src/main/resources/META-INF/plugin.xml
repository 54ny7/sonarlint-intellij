<idea-plugin version="2" url="http://docs.sonarqube.org/display/SONAR/SonarQube+in+IntelliJ">
  <id>org.sonarlint.idea</id>
  <name>SonarLint</name>
  <version>${project.version}</version>
  <vendor email="sonarqube@googlegroups.com" url="http://www.sonarsource.com">SonarSource</vendor>

  <description><![CDATA[
      SonarLint for IntelliJ IDEA.
      ]]></description>

  <change-notes><![CDATA[
      <ul>
        <li>1.0 - On the fly analysis</li>
      </ul>
      ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="133.193"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.lang</depends>

  <application-components>
    <component>
      <implementation-class>org.sonarlint.intellij.config.SonarLintGlobalSettings</implementation-class>
    </component>
  </application-components>

  <project-components>
    <component>
      <implementation-class>org.sonarlint.intellij.console.SonarLintConsole</implementation-class>
    </component>
    <component>
      <implementation-class>org.sonarlint.intellij.config.SonarLintProjectSettings</implementation-class>
    </component>
    <component>
      <implementation-class>org.sonarlint.intellij.inspection.SonarQubeRunnerFacade</implementation-class>
    </component>
  </project-components>

  <extensions defaultExtensionNs="com.intellij">
    <globalInspection hasStaticDescription="true" shortName="SonarLint" displayName="SonarLint"
                      groupKey="sonarlint.inspection.group.title" bundle="org.sonarlint.intellij.util.SonarLintBundle" enabledByDefault="true" level="WARNING"
                      implementationClass="org.sonarlint.intellij.inspection.SonarLintGlobalInspection"/>

    <codeInsight.linkHandler prefix="#sonarissue/" handlerClass="org.sonarlint.intellij.inspection.SonarLintLinkHandler"/>

    <toolWindow id="SonarLint" anchor="bottom" icon="/images/onde-sonar-13.png" factoryClass="org.sonarlint.intellij.toolwindow.SonarLintToolWindowFactory"/>

  </extensions>

  <actions>
    <action id="org.sonarlint.intellij.actions.UpdateAction" class="org.sonarlint.intellij.actions.UpdateAction"
            text="Update SonarLint" description="Update SonarLint rules" icon="/images/onde-sonar-13.png">
      <add-to-group group-id="HelpMenu" anchor="after" relative-to-action="CheckForUpdate"/>
    </action>
  </actions>
</idea-plugin>